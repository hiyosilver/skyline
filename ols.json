{
    "$schema": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
    
    "checker_args": "-strict-style -vet",

    "enable_document_formatting": true,
    "odinfmt": {
        "character_width": 100, 
        
        "tabs": true,
        "tabs_width": 4,
        
        "newline_limit": 2,
        "sort_imports": true,
        
        "space_surrounding_tuple": false 
    }
}